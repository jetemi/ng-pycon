{
  "name": "pycon-nigeria-website",
  "version": "1.0.0",
  "description": "PyCon Nigeria conference management platform",
  "main": "index.js",
  "scripts": {
    "build-css-2024": "tailwindcss -i ./pyconng/static/css/src/input_2024.css -o ./pyconng/static/css/2024.css --minify",
    "build-css-2025": "tailwindcss -i ./pyconng/static/css/src/input_2025.css -o ./pyconng/static/css/2025.css --minify",
    "build-css-2026": "tailwindcss -i ./pyconng/static/css/src/input_2026.css -o ./pyconng/static/css/2026.css --minify",
    "build-css": "npm run build-css-2024 && npm run build-css-2025 && npm run build-css-2026",
    "build-css-watch": "concurrently \"tailwindcss -i ./pyconng/static/css/src/input_2024.css -o ./pyconng/static/css/2024.css --watch\" \"tailwindcss -i ./pyconng/static/css/src/input_2025.css -o ./pyconng/static/css/2025.css --watch\" \"tailwindcss -i ./pyconng/static/css/src/input_2026.css -o ./pyconng/static/css/2026.css --watch\"",
    "build-css-prod": "npm run build-css-2024 && npm run build-css-2025 && npm run build-css-2026",
    "dev": "concurrently \"npm run build-css-watch\" \"python manage.py runserver\"",
    "build": "npm run build-css-prod"
  },
  "keywords": [
    "django",
    "wagtail",
    "conference",
    "tailwind",
    "alpine"
  ],
  "author": "PyCon Nigeria",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  }
}
